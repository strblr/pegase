{
  "name": "pegase",
  "version": "0.6.3",
  "description": "An inline, fast, powerful and lightweight PEG parser generator for JavaScript and TypeScript, with semantic actions, parametrized rules, support for native regexps, error recovery, warnings, integrated AST generation and visitors, cut operator, back references, grammar merging, and a lot more.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc & browserify lib/index.browser.js -o umd/index.js",
    "test": "yarn build & jest lib/index.test.js",
    "doc": "cd doc & mkdocs gh-deploy",
    "prepare": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strblr/pegase.git"
  },
  "keywords": [
    "parser",
    "parsing",
    "peg",
    "parse",
    "syntax",
    "grammar",
    "rule",
    "tree",
    "template",
    "literal",
    "semantic",
    "expression",
    "ast",
    "visitor",
    "semantic"
  ],
  "author": "strblr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strblr/pegase/issues"
  },
  "homepage": "https://strblr.github.io/pegase/",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "browserify": "^17.0.0",
    "jest": "^27.2.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
